<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/sundayTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sun"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="@drawable/selected_tab_background"/>

        <TextView
            android:id="@+id/mondayTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mon"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="@drawable/unselected_tab_background"/>

        <TextView
            android:id="@+id/tuesdayTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tue"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="@drawable/unselected_tab_background"/>

        <TextView
            android:id="@+id/wednesdayTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wed"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="@drawable/unselected_tab_background"/>

        <TextView
            android:id="@+id/thursdayTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thu"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="@drawable/unselected_tab_background"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scheduleRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"/>

</LinearLayout>
